# Expo environment configuration
# Copy this file to `.env` and replace the placeholders below.

# Supabase project URL (e.g. https://your-project.supabase.co)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anon/public API key (never commit the real value)
EXPO_PUBLIC_SUPABASE_ANON_KEY=replace-with-supabase-anon-key

# App display name exposed to Expo (used in app.json)
EXPO_PUBLIC_APP_NAME=TrackPay

# App display name for user-facing content (invite messages, welcome screens, etc.)
EXPO_PUBLIC_APP_DISPLAY_NAME=TrackPay

# Runtime environment tag (development | staging | production)
EXPO_PUBLIC_ENV=development

# PostHog Analytics
EXPO_PUBLIC_POSTHOG_KEY=replace-sample
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Analytics Dry-Run Mode (true = log to console only, false = send to PostHog)
EXPO_PUBLIC_ANALYTICS_DRY_RUN=true

# Invite Growth Loop Configuration
EXPO_PUBLIC_INVITE_BASE_URL=https://tp.app/i
EXPO_PUBLIC_APP_SCHEME=trackpay

# Invite Growth Loop Feature Flags (default OFF for safety)
EXPO_PUBLIC_FEATURE_INVITE_STOP=false
EXPO_PUBLIC_FEATURE_INVITE_PAYMENT=false

# UI Feature Flags
EXPO_PUBLIC_USE_CONFETTI=true

# Support & Sharing Configuration
EXPO_PUBLIC_SUPPORT_EMAIL=hello@trackpay.app
EXPO_PUBLIC_APP_STORE_ID=replace
